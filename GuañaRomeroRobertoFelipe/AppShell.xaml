<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GuañaRomeroRobertoFelipe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GuañaRomeroRobertoFelipe"
    Shell.FlyoutBehavior="Disabled"
    Title="GuañaRomeroRobertoFelipe">

    <FlyoutItem Title="INICIO" Icon="dotnet_bot.png">


        <Tab Title="Pagina 1" Icon="dotnet_bot.png">
                <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
            </Tab>
            <Tab Title="Pagina 2" Icon="dotnet_bot.png">
                <ShellContent
            Title="Pagina 1"
            ContentTemplate="{DataTemplate local:Pagina1}"
            Route="Pagina1" />
            </Tab>
            <Tab Title="Pagina 3" Icon="dotnet_bot.png">
                <ShellContent
            Title="Pagina 2"
            ContentTemplate="{DataTemplate local:Pagina2}"
            Route="Pagina2" />
            </Tab>

        </FlyoutItem>

    </Shell>
