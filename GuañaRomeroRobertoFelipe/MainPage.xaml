<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuañaRomeroRobertoFelipe.MainPage"
             Title="MainPage">
    <StackLayout Padding="20" Spacing="10">

        
        <Label x:Name="rguaña_label1" Text="Nombre" FontSize="Medium" />
        <Entry x:Name="rguaña_entryNombre" Placeholder="Ingrese su nombre" />

       
        <Label x:Name="rguaña_label2" Text="Teléfono" FontSize="Medium" />
        <Entry x:Name="rguaña_entryTelefono" Placeholder="Ingrese su número telefónico" Keyboard="Telephone" />

     


  
        <Label x:Name="rguaña_labelResultado" Text="Última recarga: " FontSize="Medium" />

    </StackLayout>
</ContentPage>